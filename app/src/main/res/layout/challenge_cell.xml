<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2" android:padding="8dp">

    <TextView
            android:text="Opponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/opponent" android:layout_column="0"
            android:layout_row="0" android:layout_rowWeight="1" android:layout_gravity="fill_horizontal"
            style="@style/opponentLabel"/>
    <TextView
            android:text="0pts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/betAmount" android:layout_column="1"
            android:layout_row="0" android:layout_rowWeight="1" style="@style/betLabel"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rounds" android:layout_column="0"
            android:layout_row="1" android:layout_columnSpan="2" android:layout_gravity="fill_horizontal">
        <TextView
                android:text="X"
                android:layout_width="wrap_content"
                android:fontFamily="monospace"
                android:layout_height="wrap_content" android:id="@+id/tmpRounds" android:layout_weight="1"
                android:padding="4dp"/>
    </LinearLayout>
</GridLayout>