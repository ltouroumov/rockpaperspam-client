<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:rowCount="2"
            android:columnCount="3"
            android:background="@color/colorPrimary"
            android:id="@+id/lobbyHeader"
            tools:context="com.securingapps.rps.activity.LobbyHeaderFragment" android:layout_height="120dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_gravity="fill">
        <TextView
                android:text="@string/hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/playerName" android:gravity="center"
                style="@style/counterValue"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_gravity="fill"
            android:layout_rowWeight="1">
        <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/counterVictories" android:gravity="center"
                style="@style/counterValue"/>
        <TextView
                android:text="Victories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center" style="@style/counterLabel"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_gravity="fill"
            android:layout_rowWeight="1">
        <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/counterDefeats" android:gravity="center"
                style="@style/counterValue"/>
        <TextView
                android:text="Defeats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center" style="@style/counterLabel"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_gravity="fill"
            android:layout_rowWeight="1" android:id="@+id/energyView">
        <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/energyValue" android:gravity="center"
                style="@style/counterValue"/>
        <TextView
                android:text="Energy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center" style="@style/counterLabel"/>
    </LinearLayout>
</GridLayout>
